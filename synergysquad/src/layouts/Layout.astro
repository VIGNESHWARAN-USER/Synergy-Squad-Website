---
// src/layouts/Layout.astro

import Header from '../components/Header.astro';
import DepartmentBanner from '../components/DepartmentBanner.astro';
import Ticker from '../components/Ticker.astro';
import Footer from '../components/Footer.astro'; // <-- ADD THIS IMPORT

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Official website for the Synergy Squad Coding Club at KIOT." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/clg-logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
	</head>
	<body>
        <Header />
        <DepartmentBanner />
        <Ticker />
		<slot /> <!-- This is where the page content goes -->
        <Footer /> <!-- <-- PLACE THE NEW COMPONENT HERE -->
	</body>
</html>

<style is:global>
    /* All global styles are correct and unchanged */
	:root {
		--primary-color: #1e40af; 
        --primary-color-hover: #1d4ed8;
		--background-color: #f1f5f9;
		--text-primary: #1e293b;
        --text-secondary: #475569;
        --border-color: #e2e8f0;
	}
	html {
		font-family: 'Inter', sans-serif;
		background-color: var(--background-color);
	}
    body {
        margin: 0;
        color: var(--text-secondary);
        line-height: 1.6;
    }
    h1, h2, h3, h4 { /* Added h4 for the footer */
        color: var(--text-primary);
    }
</style>